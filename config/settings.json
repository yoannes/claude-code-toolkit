{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "ENABLE_TOOL_SEARCH": "auto"
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto-update.py\"",
            "timeout": 45
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/session-snapshot.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/health-aggregator.py\"",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/compound-context-loader.py\"",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/read-docs-reminder.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/auto-update.py\"",
            "timeout": 45
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/session-snapshot.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/health-aggregator.py\"",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/compound-context-loader.py\"",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/read-docs-reminder.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/stop-validator.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/pretooluse-auto-approve.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/plan-mode-enforcer.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/plan-mode-enforcer.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/deploy-enforcer.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "bash \"$HOME/.claude/hooks/azure-command-guard.sh\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/commit-lesson-reminder.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/exa-search-enforcer.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/lite-heavy-enforcer.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/plan-mode-tracker.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/plan-execution-reminder.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/checkpoint-invalidator.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/citation-reminder.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/checkpoint-invalidator.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/citation-reminder.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/lite-heavy-tracker.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/go-context-tracker.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/go-context-tracker.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Glob",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/go-context-tracker.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/lite-heavy-tracker.py\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/bash-version-tracker.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/doc-updater-async.py\"",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/skill-continuation-reminder.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/skill-state-initializer.py\"",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/read-docs-trigger.py\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$HOME/.claude/hooks/permissionrequest-auto-approve.py\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
