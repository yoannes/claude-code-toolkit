{
  "name": "skill-state-initializer-forge",
  "description": "Verify skill-state-initializer creates build-state.json when /build is invoked",
  "type": "hook",
  "target": "config/hooks/skill-state-initializer.py",
  "setup": {},
  "prompt": "/build Add a hello world function",
  "assertions": [
    {
      "type": "file_exists",
      "path": ".claude/build-state.json"
    },
    {
      "type": "state_field",
      "file": "build-state.json",
      "field": "iteration",
      "expected": "1"
    }
  ],
  "timeout": 90
}
