{
  "name": "auto-approval-in-burndown-mode",
  "description": "Verify tools are auto-approved when burndown-state.json exists and is valid",
  "type": "hook",
  "target": "config/hooks/pretooluse-auto-approve.py",
  "setup": {
    "state_file": "burndown-state.json",
    "state_content": {
      "iteration": 1,
      "plan_mode_completed": true,
      "started_at": "2026-01-30T12:00:00Z"
    },
    "files": {
      "src/main.py": "# existing file"
    }
  },
  "prompt": "Read the file src/main.py and then write 'print(\"hello\")' to src/hello.py",
  "assertions": [
    {
      "type": "file_exists",
      "path": "src/hello.py"
    },
    {
      "type": "output_not_contains",
      "pattern": "permission denied|waiting for approval"
    }
  ],
  "timeout": 90
}
